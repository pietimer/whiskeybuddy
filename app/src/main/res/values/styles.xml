<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="RatingBarMedium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full_medium</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="RatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full_small</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
    </style>

</resources>
