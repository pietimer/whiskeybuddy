<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.palcoholics.whiskeybuddy.activity.SingleWhiskeyActivity">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favButton"
                android:minHeight="75sp"
                android:minWidth="75sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/ratingBar"
                android:layout_alignBottom="@+id/favButton"
                android:layout_toRightOf="@+id/favButton"
                android:layout_toEndOf="@+id/favButton"
                android:theme="@style/RatingBar"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_below="@+id/ratingBar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tableDetails" >

                <TableRow>

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:id="@+id/labelCountry"
                        android:layout_column="1"
                        android:paddingRight="20dp"
                        android:textColor="@color/primary_dark_material_light" />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textCountry"
                        android:layout_column="2" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Style"
                        android:id="@+id/labelStyle"
                        android:layout_column="1"
                        android:paddingRight="20dp"
                        android:textColor="@color/primary_dark_material_light" />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textStyle"
                        android:layout_column="2" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Cost"
                        android:id="@+id/labelCost"
                        android:layout_column="1"
                        android:paddingRight="20dp"
                        android:textColor="@color/primary_dark_material_light" />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textCost"
                        android:layout_column="2" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Avg Critic"
                        android:id="@+id/labelCriticRating"
                        android:layout_column="1"
                        android:paddingRight="20dp"
                        android:textColor="@color/primary_dark_material_light" />


                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/criticRating"
                        android:layout_column="2" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Avg User"
                        android:id="@+id/labelUserRating"
                        android:layout_column="1"
                        android:paddingRight="20dp"
                        android:textColor="@color/primary_dark_material_light" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/userRatingBar"
                        android:layout_column="2"
                        android:isIndicator="true"
                        style="@style/ReadOnlyRatingBar"
                        android:theme="@style/ReadOnlyRatingBar" />
                </TableRow>

            </TableLayout>

            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textDescription"
                android:layout_below="@+id/tableDetails"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
